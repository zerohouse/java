import java.io.DataOutputStream;
import java.io.IOException;
import java.net.Socket;

public class Sender {
	String initstring;
	Socket socket;
	DataOutputStream out;
	boolean server;

	Sender(Socket socket) {
		this.socket = socket;
		initstring = "";
		server = true;
		try {
			out = new DataOutputStream(socket.getOutputStream());
		} catch (Exception e) {
		}
	}

	public void out(String s) {
		try {
			out.writeUTF(s);
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
