import java.util.Scanner;

public class Sadari {
	

	public static void main(String[] args) {
		//Scanner scan = new Scanner(System.in);
		//System.out.print("줄 몇개? :");
		int[][] sadari = new int[10][6];

		drawln(1,1,sadari);
		drawln(1,2,sadari);
		drawln(1,5,sadari);
		drawln(5,5,sadari);
		drawln(7,5,sadari);
		drawln(4,3,sadari);
		drawln(3,1,sadari);
		drawln(6,2,sadari);
		drawln(5,1,sadari);
		drawln(3,3,sadari);
		drawln(4,0,sadari);
		drawln(2,0,sadari);
		drawln(7,3,sadari);
		
	
	//	System.out.println(sadari[1].length);
		
		print(sadari);
		
	}
	

	static void drawln(int c, int r, int[][] ll){
		try{
			ll[c][r]=1;
			ll[c][r+1]=-1;
		}
		catch (Exception e){}
		
	}
	
	static void print(int[][] sadari){
		for (int i =0;i<sadari.length;i++){
		for (int j=0;j<sadari[i].length;j++){
				System.out.print("│");
			if (sadari[i][j]==1){
				System.out.print("──");
			}
			else
				System.out.print("  ");
			
			}
		
			System.out.println("│");
		}
			
			
	}
	

}
