import java.util.ArrayList;
import java.util.Random;
import java.util.Stack;

public class Player {
	int mana, maxmana;
	Card king;
	Player enemy;
	ArrayList<Card> mycards;
	Stack<Card> dummy;
	ArrayList<Card> dek;

	Player() {
		dek = new ArrayList<Card>();
		mycards = new ArrayList<Card>();
		makeKing();
	}

	private void makeKing() {
		king = new Card(0, 30, 0);
		mycards.add(king);
	}

	void newTurn() {
		maxmana++;
		mana = maxmana;
		mycards.add(dummy.pop());
		for (Card card : mycards) {
			card.attackable = card.maxattackable;
		}
	}

	public void removeCard(Card card) {
		mycards.remove(card.index);
	}

	public void chooseFirstCard() {
		Random random = new Random();
		int r1 = 0, r2 = 0, r3 = 0, r4 = 0;
		r1 = random.nextInt(29);
		r2 = r1;
		while (r2 == r1) {
			r2 = random.nextInt(29);
		}
		r3 = r2;
		while (r3 == r1 || r3 == r2) {
			r2 = random.nextInt(29);
		}
		r4 = r3;
		while (r4 == r1 || r4 == r2 || r4 == r1) {
			r4 = random.nextInt(29);
		}

		printCard(r1);
		printCard(r1);
		printCard(r1);
		printCard(r1);
	}

	private void printCard(int r1) {
		System.out.println(String.format("%s[%d] (%d/%d)", dek.get(r1).name,
				dek.get(r1).cost, dek.get(r1).attack, dek.get(r1).defense));
	}

}
