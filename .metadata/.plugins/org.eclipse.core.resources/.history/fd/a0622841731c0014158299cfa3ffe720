import java.io.DataInputStream;
import java.io.IOException;
import java.net.Socket;
 
public class Receiver extends Thread {
    Socket socket;
    DataInputStream in;
    boolean server;
    
    Game game;
 
    Receiver(Socket socket, boolean isserver) {
        this.socket = socket;
        this.server = isserver;
        try {
            in = new DataInputStream(socket.getInputStream());
        } catch (IOException e) {
        }
    }
 
    @Override
    public void run() {
    	
    	if (server){
    		game = new Game();
			try {
				game.multiGame();
			} catch (IOException e) {
				e.printStackTrace();
			}
    		
    	}
    	
    	
    	
        while (in != null) {
            try {            	
                accept(in.readUTF());
            } catch (IOException e) {
            }
        }
    }

	private void accept(String readUTF) {
		String[] type = new String[2];
		type = readUTF.split("@##"); // type 0 => 초기화
		if (Integer.parseInt(type[0])==0){
			initGame(type[1]);
		}
	}

	private void initGame(String initstring) {
		
		String[] setting = initstring.split("::");
		net.you = new Player();
		net.you.name = setting[0];
		Dek d = new Dek();
		d.selectDek(setting[1]);
		d.infoToCardWithoutPrint(net.you);
		net.you.cardToHand(setting[2]);
		net.you.dekToDummy(setting[3]);
		net.you.enemy = net.me;
		net.me.enemy = net.you;
		System.out.println(net.you.name);		
	}
}