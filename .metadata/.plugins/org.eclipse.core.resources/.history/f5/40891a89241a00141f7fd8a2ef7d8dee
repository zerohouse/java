import java.io.IOException;
import java.util.ArrayList;


public class Game {
		int turn;
		Player player1;
		Player player2;
		GetValue get = new GetValue();
		
		Game() throws IOException{
			player1 = dekSelect(get);
			player1.gameSetting(get);
			player2 = dekSelect(get);
			player2.gameSetting(get);
			player1.enemy = player2;
			player2.enemy = player1;
		}
		
		private static Player dekSelect(GetValue get) throws IOException {
			Player player = new Player();
			System.out.print("Player 이름을 입력해주세요: ");
			player.name = get.String();
			Dek d = new Dek();
			ArrayList<Integer> able = new ArrayList<Integer>();
			able = d.showDekWithAvavility();
			System.out.print(player.name+"님의 덱을 선택해 주세요: ");
			d.pick = get.Dek(able);
			d.selectDek();
			d.infoToCard(player);
			System.out.println("Press Enter to Start");
			System.in.read();
			return player;
		}
		
		private static void nextTurn(GetValue get, Player player) {
			player.newTurn();
			System.out.println("나의 턴");
			System.out.println("<상대의 카드>"); // printEnemySize();
			System.out.println(String.format("핸드에 %d장 들고 있습니다.",player.enemy.hand.size()));
			System.out.println("<상대의 필드>");
			// Ememy.printField();
			player.printAvailable();
			int num = -2;
			while (num != -1) {
				System.out.print("카드 번호를 입력해주세요: ");
				num = get.Int() - 1;
				player.useCard(num);
				player.printAvailable();
			}
		}
		
}
