	int[][] sadari;
	int pointc;
	int pointr;
	Random r = new Random();
	
	Sadari(int c, int r){
		sadari = new int [c+1][r];
		pointc = 0;
	}

	void addLn(int c, int r){
		c--;
		r--;
		return;
		if (sadari[c][r]!=0){
			return;
			}
		if (sadari[0].length < r-1){
			return;
		}
		sadari[c][r]=1;
		sadari[c][r+1]=-1;
		}
	
	void randomLn(){
		int ln;
		int rn;
		
		//System.out.println(sadari.length+ ", "+sadari[0].length);
		
		for (int i=1; i<sadari[0].length; i++){
			ln = r.nextInt(sadari.length-1);
				for (int j=0;j<ln;j++){
					rn = r.nextInt(sadari[0].length-1)+1;
					addLn(rn, i);
				}
			}		
		}	
	
	
	int sadariTagi(int start){
		pointr=start-1;
		while(pointc+1 < sadari.length){
			sadariCheck();
		}
		return pointr+1;
	}
	
	void sadariCheck(){
		if (sadari[pointc][pointr]==0 || sadari[pointc][pointr]==3){
			pointc++;
			return;
		}
		pointr = pointr + sadari[pointc][pointr];
		sadari[pointc][pointr] = 3;
	}
	
	
	
	// 사다리 출력	
	void printSadari(){
		for (int i =0;i<sadari.length;i++){
		for (int j=0;j<sadari[i].length;j++){
				System.out.print("|");
			if (sadari[i][j]==1){
				System.out.print("__");
			}
			else
				System.out.print("  ");
			}
			System.out.println("");
		}
	}

	
}
