import java.io.DataInputStream;
import java.io.DataOutputStream;
import java.io.IOException;
import java.io.InputStream;
import java.io.OutputStream;
import java.net.ServerSocket;
import java.net.Socket;

public class OpenNewPort {

	public void openNew(int port) throws IOException {
		ServerSocket newGame = new ServerSocket(port);
		System.out.println("새로운 포트를 열었습니다. Number:" + port);
		Socket socket = newGame.accept();
		System.out.println(socket.getInetAddress() + " 로부터 연결요청이 들어왔습니다.");
		
		OutputStream out = socket.getOutputStream();
		DataOutputStream outdata = new DataOutputStream(out); // 기본형 단위로 처리하는 보조스트림
		InputStream in = socket.getInputStream();
        DataInputStream indata = new DataInputStream(in);  // 기본형 단위로 처리하는 보조스트림
	}
}
