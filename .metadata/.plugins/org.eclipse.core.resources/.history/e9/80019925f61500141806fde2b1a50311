import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;

public class Card {
	int id, attack, defense, ability;
	String name, description;

	Card(int id) {
		this.id = id;
	}
	
	
	 String readTextFile() {
		  
		  String cards = "";
		  FileReader file = null;
		  
		  try {
		    file = new FileReader("cards.nx");
		   BufferedReader reader = new BufferedReader(file);
		    String line = "";
		    while ((line = reader.readLine()) != null) {
		    	cards += line + "\n";
		    }
		  } catch (Exception e) {
		      throw new RuntimeException(e);
		  } finally {
		    if (file != null) {
		      try {
		        file.close();
		      } catch (IOException e) {
		        // Ignore issues during closing 
		      }
		    }
		  }
		  return cards;
		} 

	
	void addCard() {
		try {
			
			String s = id + "||" + name + "||" + attack + "||" + defense + "||"
					+ ability + "||" + description + "\n";
			System.out.println(name + "카드가 추가되었습니다.");

			File file = new File("cards.nx");

			if (!file.exists()) {
				file.createNewFile();
			}

			FileWriter fw = new FileWriter(file.getName(), true);
			BufferedWriter bufferWritter = new BufferedWriter(fw);
			bufferWritter.write(s);
			bufferWritter.close();

			System.out.println("카드를 저장했습니다.");

		} catch (IOException e) {
			e.printStackTrace();
		}

		

	}
}
