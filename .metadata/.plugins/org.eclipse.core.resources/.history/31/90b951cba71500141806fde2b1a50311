import java.io.File;
import java.io.FileOutputStream;
import java.io.IOException;

public class Card {
	int id, attack, defense, ability;
	String name, description;

	Card(int id) {
		this.id = id;
	}

	void AddCard() {
		String s = id + "||" + name + "||" + attack + "||" + defense + "||" + ability + "||" + description;
		File outputFile = new File("cards.txt");
		try {
			FileOutputStream outStream = new FileOutputStream(outputFile);
			outStream.write(s.getBytes(), 0 ,s.length());
			outStream.write(s.getBytes(),0,s.length());

			outStream.flush();
			outStream.close();
			System.out.println("카드를 저장했습니다.");
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
