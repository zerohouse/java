public class Dek {

	Card[] loadDefaultCards() {
		FileIO f = new FileIO();
		String c = f.readFile("cards.nx");
		String[] eachcard = c.split("\n");
		Card[] cards = new Card[eachcard.length];

		String[] tmp = new String[7];

		for (int i = 0; i < eachcard.length - 1; i++) {
			Card tmpcard = new Card();
			cards[i] = tmpcard;

			tmp = eachcard[i].split("@%@");

			cards[i].id = i + 1;
			cards[i].name = tmp[1];
			cards[i].cost = Integer.parseInt(tmp[2]);
			cards[i].attack = Integer.parseInt(tmp[3]);
			cards[i].defense = Integer.parseInt(tmp[4]);
			cards[i].type = Integer.parseInt(tmp[5]);
			cards[i].description = tmp[6];
		}
		return cards;
	}

	String[] getDekList() {
		FileIO f = new FileIO();
		String cards = f.readFile("dek.nx");
		String[] dek = cards.split("\n");
		return dek;
	}

	void showDekList(String[] dek) {
		int i = 0;
		for (String s : dek) {
			String[] tmp = s.split("@%@");
			i++;
			System.out.println(i + ". " + tmp[1]);
		}
	}

	String select(int select) {
		String dek[] = getDekList();
		String[] splt = dek[select].split("@%@");
		return splt[1];
	}

	String SelectDek(int selected, Card[] defaultcards) {
		String filename = select(selected);
		FileIO f = new FileIO();
		String select = f.readFile("./dek/" + filename + ".nx");

		return select;
	}

	void showDek(String res, Card[] defaultcards) {
		String[] sdek = res.split("@%@");

		System.out.println("덱이름: " + sdek[0]);
		
		for (int i = 2; i < sdek.length ; i++) {
			String[] tmp = sdek[i].split("#");
			System.out.println(defaultcards[Integer.parseInt(tmp[0])].name
					+ "[" + defaultcards[Integer.parseInt(tmp[0])].cost + "] "
					+ "(" + defaultcards[Integer.parseInt(tmp[0])].attack + "/"
					+ defaultcards[Integer.parseInt(tmp[0])].defense + ")"
					+ " " + tmp[1] + "장");
		}
	}

	void showCards(Card[] cards) {
		for (int i = 0; i < cards.length ; i++) {
			System.out.print(cards[i].id + ". " + cards[i].name);
			System.out.println("[" + cards[i].cost + "]  " + "("
					+ cards[i].attack + "/" + cards[i].defense + ")");
		}

	}

	String addCard(int add, String s) {
		add++;//입력값과 아이디 일치
		
		String origin[] = s.split("@%@");
		String[] tmp;
		String res = "";
		boolean is=false;
		
		for (int i=2;i<origin.length;i++){
			
			tmp = origin[i].split("#");

			if (Integer.parseInt(tmp[0])==add){
				int added = Integer.parseInt(tmp[1])+1;
				origin[i] = tmp[0]+"#"+added;
				is=true;
			}
			res += "@%@"+origin[i];
		}
		
		if (is==false){
			res = res + "@%@"+add+"#"+"1";
		}
		System.out.println(res);
		res=origin[0]+"@%@"+origin[1]+res;
		res.replace("\n", "");
		return res;
		
	}

}
