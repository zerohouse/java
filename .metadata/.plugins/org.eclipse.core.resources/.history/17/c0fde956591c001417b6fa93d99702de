import java.io.DataOutputStream;
import java.io.IOException;
import java.net.Socket;

public class Sender extends Thread {
	String contents;
	Socket socket;
	DataOutputStream out;

	Sender(Socket socket, String string) {
		this.socket = socket;
		try {
			out = new DataOutputStream(socket.getOutputStream());
			contents = string; 
		} catch (Exception e) {
		}
	}

	@Override
	public void run() {
		GetValue get = new GetValue();

		while (out != null) {
			try {
				out.writeUTF(contents);
			} catch (IOException e) {
				e.printStackTrace();
			}
		}
	}

}