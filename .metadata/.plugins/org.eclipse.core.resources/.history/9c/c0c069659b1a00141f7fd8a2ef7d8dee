import java.io.DataInputStream;
import java.io.InputStream;
import java.net.Socket;


public class Net {

	public void getPort(){
        String serverIP = "192.168.0.17"; // 서버 아이피.
        System.out.println("서버에 연결중입니다. 서버 IP : " + serverIP);
         
        Socket socket = new Socket(serverIP, 12423);
         
        InputStream in = socket.getInputStream();
        DataInputStream datain = new DataInputStream(in);  // 기본형 단위로 처리하는 보조스트림
         
        System.out.println("할당받은 포트번호 : " + datain.readInt());
        System.out.println("연결을 종료합니다.");
         
        // 스트림과 소켓을 닫는다.
        datain.close();
        socket.close();
	}
}
