import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.util.ArrayList;
import java.util.List;

public class Card {
	int id, attack, defense, ability;
	String name, description;

	Card(int id) {
		this.id = id;
	}

	private List<String> readFile(String filename) throws Exception {
		String line = null;
		List<String> records = new ArrayList<String>();

		BufferedReader bufferedReader = new BufferedReader(new FileReader(
				filename));

		while ((line = bufferedReader.readLine()) != null) {
			records.add(line);
		}

		bufferedReader.close();
		return records;
	}

	void addCard() {
		try {

			String s = id + "||" + name + "||" + attack + "||" + defense + "||"
					+ ability + "||" + description + "\n";
			System.out.println(name + "카드가 추가되었습니다.");

			File file = new File("cards.txt");

			if (!file.exists()) {
				file.createNewFile();
			}

			FileWriter fw = new FileWriter(file.getName(), true);
			BufferedWriter bufferWritter = new BufferedWriter(fw);
			bufferWritter.write(s);
			bufferWritter.close();

			System.out.println("카드를 저장했습니다.");

		} catch (IOException e) {
			e.printStackTrace();
		}

	}
}
