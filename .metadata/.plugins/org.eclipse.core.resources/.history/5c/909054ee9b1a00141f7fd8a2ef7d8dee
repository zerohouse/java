import java.io.DataInputStream;
import java.io.IOException;
import java.io.InputStream;
import java.net.Socket;
import java.net.UnknownHostException;


public class Net {
	final static String serverIP = "192.168.0.17";
	
	public int getPort() throws UnknownHostException, IOException{
        
        System.out.println("서버에 연결중입니다. 서버 IP : " + serverIP);
         
        Socket socket = new Socket(serverIP, 12423);
        InputStream in = socket.getInputStream();
        DataInputStream datain = new DataInputStream(in);  
         
        System.out.println("할당받은 포트번호 : " + datain.readInt());
         
        datain.close();
        socket.close();
        return datain.readInt();
	}
	
	public void connectServer(int port){
		System.out.println("서버에 연결중입니다. 서버 IP : " + serverIP);
        
        Socket socket = new Socket(serverIP, 12423);
        InputStream in = socket.getInputStream();
        DataInputStream datain = new DataInputStream(in);  
         
        System.out.println("할당받은 포트번호 : " + datain.readInt());
         
        datain.close();
        socket.close();
        
	}
}
